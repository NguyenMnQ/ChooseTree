@model DonHang

@{
    ViewData["Title"] = "QLChiTietDonHang";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" style="margin: 50px 0; color: #5ba503">
    <div class="col-md-4">
        <form asp-action="QLChiTietDonHang">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Madon" class="control-label">Mã đơn hàng: </label>
                <strong><span style="color: black"> @Model.Madon</span></strong>
                <input type="hidden" asp-for="Madon" />

                <label asp-for="Makh" class="control-label">Mã khách hàng: </label>
                <strong><span style="color: black">@Model.Makh</</span></strong>
                <input type="hidden" asp-for="Makh" />
            </div>

            <div class="form-group">
                <a asp-controller="Admin" asp-action="Sanphamdathang" asp-route-id="@Model.Madon" class="btn btn-primary">Xem đơn hàng</a>
            </div>
            <div class="form-group">
                <label asp-for="Thanhtoan" class="control-label">Hình thức thanh toán</label>
                <input asp-for="Thanhtoan" class="form-control" disabled />
                <span asp-validation-for="Thanhtoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Giaohang" class="control-label">Trạng thái</label>
                @*<input asp-for="Giaohang" class="form-control" />*@

                <select asp-for="Giaohang" id="cars" class="form-control">
                    <option checked>@Model.Giaohang</option>
                    <option value="chờ xử lý">1 - chờ xử lý</option>
                    <option value="đang xử lý">2 - đang xử lý</option>
                    <option value="đang giao">3 - đang giao</option>
                    <option value="giao thành công">4 - giao thành công</option>
                    <option value="hủy">5 - hủy</option>
                </select>

                <span asp-validation-for="Giaohang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaydat" class="control-label">Ngày đặt</label>
                <div class="form-control">@Model.Ngaydat</div>
                <span asp-validation-for="Ngaydat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaygiao" class="control-label">Ngày giao</label>
                <input asp-for="Ngaygiao" class="form-control" />
                <span asp-validation-for="Ngaygiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="QLDonHang" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
