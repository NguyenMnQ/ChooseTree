@model             SanPham

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 padding-10">
    <h1 style="color:#5ba503">CHỈNH SỬA SẢN PHẨM</h1>
    <hr />
    <div class="row" style="color:#5ba503">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data" asp-controller="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Masp" />
                <div class="form-group">
                    <!--<label asp-for="Idthuvien" class="control-label"></label>-->
                    <input type="hidden" asp-for="Idthuvien" />
                </div>
                <div class="form-group">
                    <label asp-for="Tensp" class="control-label">Tên sản phẩm</label>
                    <input asp-for="Tensp" class="form-control" />
                    <span asp-validation-for="Tensp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hinh" class="control-label">Hình</label>
                    <img width="200" src="@Model.Hinh" id="preImg" />
                    <input asp-for="Hinh" type="file" id="fileInput" onchange="readURL(this);" class="form-control" multiple />

                    <input type="hidden" name="PathHinh" value="@Model.Hinh" id="PathHinh" />
                    <span asp-validation-for="Hinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Giaban" class="control-label">Giá bán</label>
                    <input asp-for="Giaban" class="form-control" />
                    <span asp-validation-for="Giaban" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ngaycapnhat" class="control-label">Ngày cập nhật</label>
                    <input asp-for="Ngaycapnhat" class="form-control" />
                    <span asp-validation-for="Ngaycapnhat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdDanhmuc" class="control-label">Danh mục</label>
                    <select asp-for="IdDanhmuc" class="form-control" asp-items="@ViewBag.ShowDropList">
                        <option value="">--Chọn danh mục--</option>
                    </select>
                    <span asp-validation-for="IdDanhmuc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Soluongton" class="control-label">Kho</label>
                    <input asp-for="Soluongton" class="form-control" />
                    <span asp-validation-for="Soluongton" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mota" class="control-label">Mô tả</label>
                    <input asp-for="Mota" class="form-control" />
                    <span asp-validation-for="Mota" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Giamgia" class="control-label">Giảm giá</label>
                    <input asp-for="Giamgia" class="form-control" />
                    <span asp-validation-for="Giamgia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>

    $(function () {
        $('#fileInput').change(function () {
            var fileName = $(this).val().split('\\').pop();
            var pathHinh = '/Content/uploads/' + fileName;
            $('#PathHinh').val(pathHinh);
        });
    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#preImg').attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }   
</script>
