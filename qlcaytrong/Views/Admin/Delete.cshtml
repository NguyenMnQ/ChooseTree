@model             SanPham

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 padding-10">
    <h1 style="color:#5ba503; text-align:center">BẠN CÓ CHẮC MUỐN XÓA SẢN PHẨM NÀY KHÔNG ?</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Masp" class="control-label">Tên sản phẩm</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tensp)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Hinh" class="control-label">Hình sản phẩm</label>
            </dt>
            <dd class="col-sm-10">
                <img src="@Html.DisplayFor(model => model.Hinh)" height="100" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Masp" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
