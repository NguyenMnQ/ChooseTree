@model IEnumerable<DanhMuc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="color:#5ba503; text-align:center">Danh mục</h1>
<hr>
<p>
    <a class="btn btn-success" asp-action="Create">Thêm danh mục mới</a>
</p>
<table class="table table-striped" style="text-align:center">
    <thead>
        <tr style="color: #5ba503">
            <th>Tên danh mục</th>
            <th>Loại danh mục</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tendanhmuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
@*                    <a asp-action="Details" asp-route-id="@item.IdDanhmuc" class="text-primary f2"><i class="fa-solid fa-eye"></i></a>
*@                    <a asp-action="Edit" asp-route-id="@item.IdDanhmuc" class="text-primary f2"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdDanhmuc" class="text-primary f2"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
